<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.narh.sample.mybatis.domain.mapper.JobCategoryReferenceMapper">

  <resultMap id="JobCategoryReferenceResultMap" type="JobCategoryReference">
    <association property="job"         column="JOB"              javaType="Job"
      select="com.github.narh.sample.mybatis.domain.mapper.JobMapper.findByCode"/>
    <association property="category"    column="CATEGORY"         javaType="Category"
      select="com.github.narh.sample.mybatis.domain.mapper.WeaponCategoryMapper.findByCode"/>
  </resultMap>

  <select id="findAll" resultMap="JobCategoryReferenceResultMap">
    select JOB,CATEGORY from JOB_CATEGORY_REFERENCE;
  </select>

  <select id="findByJob" resultMap="JobCategoryReferenceResultMap">
    select JOB,CATEGORY from JOB_CATEGORY_REFERENCE where job = #{job}
  </select>
</mapper>